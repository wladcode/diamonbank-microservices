	<groupId>com.wladecode</groupId>
	<artifactId>diamonbank-web</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>diamonbank-web</name>
	<description>Web client with OAuth2.0</description>
	<url/>
	<licenses>
		<license/>
